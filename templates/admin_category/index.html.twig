{% extends 'base.html.twig' %}

{% block title %}ADMIN CATEGORY INDEX{% endblock %}

{% block body %}
    <style>
		.styled-title {
			font-family: 'Poppins', sans-serif;
			font-size: 4vw;
			text-align: center;
			font-weight: 900;
			/* background-clip: border-box; */
			/* background-image: url("../uploads/sea.jpg"); */
			/* -webkit-text-fill-color: transparent; */
			/* -webkit-background-clip: text; */
		}
	</style>
	<h1 class="styled-title fit-content pt-4 pb-3">ADMIN CATEGORY</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Parent Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.Parent }}</td>
                <td>
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}">Create new</a>
{% endblock %}
