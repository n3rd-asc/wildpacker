{# article/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Article
{% endblock %}
{% block body %}
	<div class="card mb-3">
		<img src="..\..\..\uploads\{{ article.image }}" class="object-fit-cover" alt="Article Image" height="700px">
		<div class="card-body">
			<h5 class="card-title">{{ article.title }}</h5>
			<p class="card-text">{{ article.content }}</p>
			<p class="card-text">
				<small class="text-muted">Written by:
					{{ article.user.lastname }}
					{{ article.user.firstname }}</small>
			</p>
			<p class="card-text">
				Categories:
				{% for category in article.category %}
					{{ category.name }}
					{% if not loop.last %},
					{% endif %}
				{% endfor %}
			</p>
			<a href="{{ path('app_article_index') }}" class="btn btn-primary">Back to List</a>
		</div>
	</div>
{% endblock %}
